# Flourish App Environment Variables Template
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=production
FLASK_ENV=production
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql://flourish:your_password@localhost:5432/flourish
DB_USER=flourish
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flourish

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Security
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API Keys - AI Services
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
TOGETHER_API_KEY=your_together_api_key_here

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=flourish-app-assets
S3_BUCKET_REGION=us-east-1

# Domain and URLs
DOMAIN_NAME=flourish-app.com
FRONTEND_URL=https://flourish-app.com
BACKEND_URL=https://api.flourish-app.com
VITE_API_URL=https://api.flourish-app.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@flourish-app.com
EMAIL_FROM_NAME=Flourish

# Push Notifications
FCM_SERVER_KEY=your_firebase_cloud_messaging_server_key
APNS_KEY_ID=your_apple_push_notification_key_id
APNS_TEAM_ID=your_apple_team_id
APNS_BUNDLE_ID=com.flourish.relationshipapp

# Payment Processing
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# In-App Purchases
APPLE_SHARED_SECRET=your_apple_shared_secret
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY=your_google_play_service_account_key

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Social Media OAuth
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
APPLE_CLIENT_ID=your_apple_signin_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id

# Video/Voice Calls
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_API_KEY_SID=your_twilio_api_key_sid
TWILIO_API_KEY_SECRET=your_twilio_api_key_secret
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# Content Moderation
PERSPECTIVE_API_KEY=your_perspective_api_key
AZURE_CONTENT_MODERATOR_KEY=your_azure_content_moderator_key
AZURE_CONTENT_MODERATOR_ENDPOINT=https://your-region.api.cognitive.microsoft.com/

# Maps and Location
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# CDN and Storage
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id
CLOUDFRONT_DOMAIN=your-distribution.cloudfront.net

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Feature Flags
ENABLE_AI_COACHING=true
ENABLE_VIDEO_CALLS=true
ENABLE_VOICE_MESSAGES=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true

# Mobile App Configuration
EXPO_PUBLIC_API_URL=https://api.flourish-app.com
EXPO_PUBLIC_ENVIRONMENT=production

# Development/Testing
TEST_USER_EMAIL=test@flourish-app.com
TEST_USER_PASSWORD=test_password_123